<%= form_for(@user) do |f| %>
	<table class="table">
		<tr>
			<th>Week</th>
			<th>Favorite</th>
			<th>Line</th>
			<th>Dog</th>
		</tr>
		<%= hidden_field_tag "user[game_ids][]", nil %>
		<% games.each_with_index do |g, index| %>
			<% if (index %2 == 0) %>
				<tr>
				<td><%= g.week %></td>
				<td><%= check_box_tag "user[game_ids][]", g.id, @user.game_ids.include?(g.id) %> <%= g.team %></td>
				<td><%= g.line %></td>
			<% else %>
				<td><%= check_box_tag "user[game_ids][]", g.id, @user.game_ids.include?(g.id) %> <%= g.team %></td>
				</tr>
			<% end %>
		<% end %>
	</table>
<%= f.submit %>
<%= link_to "Clear picks", clear_week_picks_path(current_user.id, week_id) %>
<% end %>